rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isValidFileType(allowedTypes) {
      return request.resource.contentType in allowedTypes;
    }
    
    function isValidFileSize(maxSizeInMB) {
      return request.resource.size < maxSizeInMB * 1024 * 1024;
    }
    
    // User files - users can only access their own files
    match /users/{userId}/{allPaths=**} {
      allow read, write: if isOwner(userId) && 
        isValidFileSize(10) && // 10MB limit
        isValidFileType([
          'image/jpeg', 
          'image/png', 
          'image/gif',
          'application/pdf',
          'text/plain',
          'application/json',
          'application/vnd.ms-excel',
          'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet'
        ]);
    }
    
    // Invoice attachments
    match /invoices/{userId}/{invoiceId}/{fileName} {
      allow read, write: if isOwner(userId) && 
        isValidFileSize(5) && // 5MB limit for invoice attachments
        isValidFileType([
          'image/jpeg', 
          'image/png', 
          'application/pdf'
        ]);
    }
    
    // Profile pictures
    match /profiles/{userId}/avatar.{ext} {
      allow read, write: if isOwner(userId) && 
        isValidFileSize(2) && // 2MB limit for profile pictures
        isValidFileType(['image/jpeg', 'image/png']);
    }
    
    // Company logos
    match /companies/{userId}/logo.{ext} {
      allow read, write: if isOwner(userId) && 
        isValidFileSize(2) && // 2MB limit for logos
        isValidFileType(['image/jpeg', 'image/png', 'image/svg+xml']);
    }
    
    // OCR scanned documents
    match /ocr/{userId}/{documentId}.{ext} {
      allow read, write: if isOwner(userId) && 
        isValidFileSize(10) && // 10MB limit for scanned documents
        isValidFileType(['image/jpeg', 'image/png', 'application/pdf']);
    }
    
    // Backup files
    match /backups/{userId}/{backupId}.json {
      allow read, write: if isOwner(userId) && 
        isValidFileSize(50); // 50MB limit for backup files
    }
    
    // Public assets (read-only)
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Only admins can upload public assets
    }
    
    // App assets (read-only)
    match /assets/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // Test files for setup validation
    match /test/{allPaths=**} {
      allow read, write: if isAuthenticated() && 
        isValidFileSize(1); // 1MB limit for test files
    }
  }
}
